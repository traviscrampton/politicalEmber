{{#if updateQuestionForm}}
  <h4>Update Question About {{question.title}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">topic</label>
          {{input value=title id="title" placeholder=question.title}}
        </div>

        <div class="form-group">
          <label for="question">Question</label>
          {{textarea row=3 value=question id="question" placeholder=question.question}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>
        <button class="btn btn-warning" {{action 'update' question}}>Update</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-warning" {{action 'updateQuestionForm'}}>Edit Question</button>
{{/if}}

{{yield}}
